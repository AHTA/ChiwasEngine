<header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="@Url.Action("Index", "Home")">Chiwas Engine</a>
    </div>
    <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
      @Html.MvcSiteMap().Menu("BootstrapMenuHelperModel")
      
      @if (Request.IsAuthenticated)
      {
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Hola, @User.Identity.Name <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><a href="@Url.Action("Profile", "Account")">Perfil</a></li>
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                    }                
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesi&oacute;n</a></li>

                </ul>
            </li>
        </ul>
    }
      else
      {    
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="@Url.Action("LogIn", "Account")">Sign In</a>
            </li>
        </ul>
    }

    </nav>
  </div>
</header>
